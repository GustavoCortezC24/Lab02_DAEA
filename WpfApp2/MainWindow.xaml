<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="Login" Height="350" Width="400" WindowStartupLocation="CenterScreen"
        Background="#2D2D2D">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Iniciar Sesión" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20" Foreground="White" Grid.Row="0" />

        <Grid Grid.Row="1">
            <TextBox x:Name="Username" Width="300" Height="40" Margin="0,0,0,15" Padding="10" FontSize="16" BorderBrush="#444444" BorderThickness="1" Background="#3C3C3C" HorizontalAlignment="Center" Foreground="White"/>
            <TextBlock Text="Nombre de Usuario" Foreground="#888888" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="55,0,0,15" FontSize="16" IsHitTestVisible="False"/>
        </Grid>

        <Grid Grid.Row="2">
            <PasswordBox x:Name="Password" Width="300" Height="40" Margin="0,0,0,15" Padding="10" FontSize="16" BorderBrush="#444444" BorderThickness="1" Background="#3C3C3C" HorizontalAlignment="Center" Foreground="White"/>
            <TextBlock Text="Contraseña" Foreground="#888888" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="55,0,0,15" FontSize="16" IsHitTestVisible="False"/>
        </Grid>

        <Button Content="Iniciar Sesión" Width="300" Height="45" FontSize="16" Background="#FF6F00" Foreground="White" BorderBrush="#FF6F00" BorderThickness="1" HorizontalAlignment="Center" Margin="0,10" Grid.Row="3"/>

        <TextBlock Text="Regístrate" FontSize="14" HorizontalAlignment="Center" Foreground="#FF6F00" Cursor="Hand" Grid.Row="4" VerticalAlignment="Top"/>
        <TextBlock Text="¿No tienes cuenta?" FontSize="14" HorizontalAlignment="Center" Margin="10,30,0,0" Foreground="#BBBBBB" Grid.Row="4"/>
    </Grid>
</Window>
